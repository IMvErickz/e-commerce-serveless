// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String @id @default(cuid())
  Name  String
  Price Float
  img   String

  category Category[]
}

model Category {
  id          String @id @default(cuid())
  Name        String @unique
  Description String

  product Product[]
}
